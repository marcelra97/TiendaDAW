<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web

    Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>

  <display-name>Listado</display-name>
  <description>Web-App para Listar y Detalles</description>

  <context-param>
    <description>Enable debugging for the application</description>
    <param-name>debug</param-name>
    <param-value>true</param-value>
  </context-param> 
  
    <servlet>
         <servlet-name>ListadoS</servlet-name>
         <servlet-class>ListadoC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>ListadoS</servlet-name>
         <url-pattern>/listado</url-pattern>
    </servlet-mapping>


    <!--DETALLES-->
     <servlet>
         <servlet-name>DetallesS</servlet-name>
         <servlet-class>DetallesC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>DetallesS</servlet-name>
         <url-pattern>/detalles</url-pattern>
    </servlet-mapping>


 <!--Datos-->
     <servlet>
         <servlet-name>DatosBancariosS</servlet-name>
         <servlet-class>DatosBancariosC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>DatosBancariosS</servlet-name>
         <url-pattern>/datos</url-pattern>
    </servlet-mapping>

<!-- Confirmacin pedido -->
       <servlet>
         <servlet-name>ConfirmacionPedidoS</servlet-name>
         <servlet-class>ConfirmacionPedidoC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>ConfirmacionPedidoS</servlet-name>
         <url-pattern>/confirmacion</url-pattern>
    </servlet-mapping>

<!-- Gestion vendedor -->
       <servlet>
         <servlet-name>GestionVendedorS</servlet-name>
         <servlet-class>GestionVendedorC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>GestionVendedorS</servlet-name>
         <url-pattern>/vendedor</url-pattern>
    </servlet-mapping>

<!-- Pedidos anteriores -->
       <servlet>
         <servlet-name>PedidosAnterioresS</servlet-name>
         <servlet-class>PedidosAnterioresC</servlet-class>
    </servlet>

    <servlet-mapping>
         <servlet-name>PedidosAnterioresS</servlet-name>
         <url-pattern>/pedidosAnteriores</url-pattern>
    </servlet-mapping>
    
</web-app>
